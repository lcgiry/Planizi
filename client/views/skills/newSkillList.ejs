<!DOCTYPE html>
<html>
	<div class="modal fade" id="addSkill" role="dialog">
<div class="modal-dialog">
<div class="modal-content">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Ajouter une comp√©tence</h4>
    </div>
    <form method="post" action="/skills/<%= user.user_mail %>/newSkill" style="border-radius: 0px;" class="form-horizontal group-border-dashed" enctype="multipart/form-data">
	<div class="modal-body">
		                            <div class="form-group">
                                        
                                        <div class="col-sm-6 col-xs-10">
                                            <select class="select2" name="skill_label">
                                                <% SkillArray.forEach((skill, index) => { %>
                                                <option value="<%= skill.skill_label %>"><%= skill.skill_name_fr %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                     
                                        <div>
											<input id="prodId" name="user_mail" type="hidden" value="<%= user.user_mail %>">
										</div>
                                    </div>
		
    </div>
    <div class="modal-footer"> 
		<div class="form-group">
			<div class="col-sm-12 text-center">
				<button type="button" class="btn btn-danger btn-space" data-dismiss="modal">Close</button>
                <button class="btn btn-alt3 btn-space" type="submit">Enregistrer<i class="icon s7-check"></i></button>
			</div>
		</div>
	</div>
    </form>                            
</div> 
</div>
</div>                                
</html>






